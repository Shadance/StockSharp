<sx:ExtendedBaseApplication
			x:Class="StockSharp.Hydra.App"
			xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			StartupUri="MainWindow.xaml" ShutdownMode="OnExplicitShutdown"
			xmlns:sx="http://schemas.stocksharp.com/xaml">

    <sx:ExtendedBaseApplication.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!--Attach Default Fluent Control's Theme-->
                <ResourceDictionary Source="pack://application:,,,/Fluent;Component/Themes/Windows8/Generic.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </sx:ExtendedBaseApplication.Resources>
    
</sx:ExtendedBaseApplication>